<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/learnquranBtn1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_12"
    android:layout_marginEnd="@dimen/space_12"
    android:layout_marginTop="@dimen/space_4"
    android:background="@drawable/shimmer_border_default"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/white"
    app:layout_constraintEnd_toStartOf="@+id/learnquranBtn2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView4"
    app:strokeWidth="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/ayatArabic"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_12"
            android:textAppearance="@style/TextAppearance.font24"
            android:textColor="@color/txt_black_deep"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/ayatBn"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_12"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/txt_black_deep"
            app:layout_constraintTop_toBottomOf="@+id/ayatArabic"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ayatEn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_12"
            android:text="2. All praise is for Allahâ€”Lord of all worlds,1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/txt_black_deep"
            app:layout_constraintTop_toBottomOf="@+id/ayatBn"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_12"
            app:layout_constraintTop_toBottomOf="@+id/ayatEn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/surayAyat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_12.5"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_12.5"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/txt_ash"
            app:layout_constraintTop_toBottomOf="@+id/border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/btnMore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_8"
            android:src="@drawable/ic_3_dot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border"/>

        <View
            android:id="@+id/btnDownload"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMore"
            app:layout_constraintTop_toBottomOf="@id/border"/>


        <View
            android:id="@+id/btnFav"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDownload"
            app:layout_constraintTop_toBottomOf="@id/border"/>

        <View
            android:id="@+id/btnTafseer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnFav"
            app:layout_constraintTop_toBottomOf="@id/border"/>


        <View
            android:id="@+id/btnPlay"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/shimmer_background"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnTafseer"
            app:layout_constraintTop_toBottomOf="@id/border"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</com.google.android.material.card.MaterialCardView>
