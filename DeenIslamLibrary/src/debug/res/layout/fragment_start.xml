<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".views.splash.SplashActivity"
    android:scrollbars="none"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingBottom="@dimen/space_40">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/logo_mark"
        android:layout_marginTop="@dimen/space_28"
        android:layout_marginStart="@dimen/space_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginTop="@dimen/space_24"
        android:text="আসসালামু আলাইকুম"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_24"
        android:layout_marginTop="@dimen/space_4"
        android:text="দ্বীন ইসলাম -এ স্বাগতম"
        android:textAppearance="@style/TextAppearance.font32"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting" />


       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/start_logo"
           android:layout_width="360dp"
           android:layout_height="360dp"
           android:layout_marginStart="@dimen/space_38"
           android:layout_marginTop="@dimen/space_32"
           android:src="@drawable/get_started_logo"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/welcome" />

       <com.google.android.material.button.MaterialButton
           android:id="@+id/startBtn"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_marginEnd="@dimen/space_24"
           android:layout_marginStart="@dimen/space_24"
           android:paddingTop="@dimen/space_16"
           android:paddingBottom="@dimen/space_16"
           android:text="শুরু করুন"
           android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
           android:textColor="@color/primary"
           app:backgroundTint="@color/white"
           app:cornerRadius="8dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>