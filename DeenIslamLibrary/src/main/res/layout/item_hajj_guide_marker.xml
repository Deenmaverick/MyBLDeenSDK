<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/markerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deen_ic_hajj_guide_marker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/markerTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAppearance="@style/DeenTextAppearance.font8"
            android:textColor="@color/deen_txt_black_deep"
            app:layout_constraintStart_toStartOf="@+id/markerIcon"
            app:layout_constraintEnd_toEndOf="@+id/markerIcon"
            app:layout_constraintTop_toTopOf="@+id/markerIcon"
            app:layout_constraintBottom_toBottomOf="@+id/markerIcon"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
